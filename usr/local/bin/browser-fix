#!/bin/bash

if ! `grep -q password-store /opt/google/chrome/google-chrome`; then
	sed -i 's/^exec.*$/exec -a "$0" "$HERE\/chrome"  "--password-store=basic" "$@"/' /opt/google/chrome/google-chrome
fi

